@using DotNetAppStarterKit.SampleMvc.DataProject.Query.QueryDto
@model DotNetAppStarterKit.SampleMvc.Models.AllThingysModel

@{
    ViewBag.Title = "Home Page";

    if (Model.Thingys == null)
    {
        Model.Thingys = new List<ThingyQueryDto>();
    }
}

<h2>@ViewBag.Title</h2>
<fieldset>
    @if (!Model.Thingys.Any())
    {
        <legend>No Thingys</legend>
        <p>Select "Add new thingy" below to create your first thingy!</p>
    }
    else
    {
        <legend>Your Thingys:</legend>
        <ul>
            @foreach (var currThingy in Model.Thingys)
            {
                <li>@Html.ActionLink(currThingy.Name ?? "[Unknown]", MVC.Thingy.Index(currThingy.Id))</li>
            }
        </ul>
    }
    @Html.ActionLink("Add new thingy", MVC.Thingy.Index())
</fieldset>
